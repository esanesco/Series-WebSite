{% extends 'base.html.twig' %}

{% block body %}
    <section class="series-list">
        {#        afficher les series #}

        {% for  serie in series %}
            <article>
{#                <h3>{{ serie.name }}</h3>#}
                <a   href="{{ path('serie_details' , {'id' : serie.id} ) }}"
                     title="View serie's detail | {{ serie.seasons |length }} seasons">
                    <img src="{{ asset('img/posters/series/' ~ serie.poster ) }}" alt="backdrop {{ serie.name }}">
                </a>
            </article>
        {% endfor %}

    </section>
{% endblock %}

{% block title %}
    The best series | {{ parent() }}
{% endblock %}

